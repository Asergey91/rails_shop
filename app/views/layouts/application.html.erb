<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body><br>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span> 
      </button>
      <span class="navbar-brand">OnlineShop</span>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav ">
        <li class="active"><a href="#">Home</a></li>
        <li><a href="#">Browse Categories</a></li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
          </span>
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <%if user_signed_in?%>
          <li><%=link_to '<span class="glyphicon glyphicon-shopping-cart"></span> Cart ('.html_safe+current_user.cart_items.to_s.html_safe+')'.html_safe, root_path%></li>
          <li><%=link_to '<span class="glyphicon glyphicon-user"></span> <b>'.html_safe+current_user.name.html_safe+'</b>'.html_safe, root_path%></li>
          <li><%=link_to '<span class="glyphicon glyphicon-log-out"></span> Logout'.html_safe, destroy_user_session_path, method: :delete%></li>
        <%else%>
          <li><%=link_to '<span class="glyphicon glyphicon-user"></span> Register'.html_safe, new_user_registration_path%></li>
          <li><%=link_to '<span class="glyphicon glyphicon-log-in"></span> Login'.html_safe, new_user_session_path%></li>
        <%end%>
      </ul>
    </div>
  </div>
</nav>
<%= yield %>
</body>
</html>
